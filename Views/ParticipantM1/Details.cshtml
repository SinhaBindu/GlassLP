@model GlassLP.Models.ParticipantM1ViewModel

@{
    ViewData["Title"] = "Participant Details";
}
<div class="row m-1">
    <div class="col-12 ">
        <h4 class="main-title">Participant Module One - Details</h4>
        <ul class="app-line-breadcrumbs mb-3">
            <li class="">
                <a class="f-s-14 f-w-500" href="Home/Index">
                    <span>
                        Dashboard
                    </span>
                </a>
            </li>
            <li class="active">
                <a class="f-s-14 f-w-500" href="#">Participant Module One - Details</a>
            </li>
        </ul>
    </div>
</div>
<div class="row view-details">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Participant Module One - Details</h5>
                <div>
                    <a asp-action="Create" asp-route-PId="@Model.ParticipantId_pk" class="btn btn-sm btn-outline-info text-uppercase b-r-22">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary text-uppercase b-r-22 ms-2">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Camp Code:</label>
                            <div class="form-control-plaintext">@ViewBag.CampCode</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Participant Name:</label>
                            <div class="form-control-plaintext">@Model.ParticipantName</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mobile No:</label>
                            <div class="form-control-plaintext">@Model.MobileNo</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Age:</label>
                            <div class="form-control-plaintext">@Model.Age</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">SHG Name:</label>
                            <div class="form-control-plaintext">@Model.SHGName</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Occupation:</label>
                            <div class="form-control-plaintext">
                                @ViewBag.OccupationName
                                @if (!string.IsNullOrEmpty(Model.Occupation_Others))
                                {
                                    <span> - @Model.Occupation_Others</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Vision Issue Identified:</label>
                            <div class="form-control-plaintext">
                                @(Model.VisionIssueIdentifiedId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Type of Vision Issue:</label>
                            <div class="form-control-plaintext">
                                @(Model.TypeofVisionIssueId == 1 ? "Myopia" : Model.TypeofVisionIssueId == 2 ? "Other" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Glasses Provided:</label>
                            <div class="form-control-plaintext">
                                @(Model.GlassesProvidedId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Power of Glass:</label>
                            <div class="form-control-plaintext">@ViewBag.PowerOfGlassName</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Feedback on Comfort:</label>
                            <div class="form-control-plaintext">
                                @(Model.FeedbackonComfort == 1 ? "Satisfied" : Model.FeedbackonComfort == 2 ? "Not Satisfied" : Model.FeedbackonComfort == 3 ? "Adjustment Needed" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Referral Required:</label>
                            <div class="form-control-plaintext">
                                @(Model.FollowupRequiredId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Digital Consent:</label>
                            <div class="form-control-plaintext">
                                @(Model.DigitalConsentId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Remarks:</label>
                            <div class="form-control-plaintext">@Model.Remarks</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status:</label>
                            <div class="form-control-plaintext">
                                @(Model.IsActive == true ? "Active" : "Inactive")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Created By:</label>
                            <div class="form-control-plaintext">@Model.CreatedBy</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Created On:</label>
                            <div class="form-control-plaintext">@Model.CreatedOn</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Updated By:</label>
                            <div class="form-control-plaintext">@Model.UpdatedBy</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Updated On:</label>
                            <div class="form-control-plaintext">@Model.UpdatedOn</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

