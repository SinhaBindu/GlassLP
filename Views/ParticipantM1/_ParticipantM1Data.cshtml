@using System.Data
@{
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }
</style>

<table class="table table-bottom-border table-lg align-middle tbl" id="tbl">
    <thead class="text-center">
        <tr>
            <th class="text-center tblth">Srno.</th>
            <th class="text-center tblth">
                <input type="checkbox" id="selectAll" title="Select All" />
            </th>
            <th class="text-center tblth">Camp Code</th>
            <th class="text-center tblth">Participant Name</th>
            <th class="text-center tblth">Mobile No</th>
            <th class="text-center tblth">Age</th>
            <th class="text-center tblth">SHG Name</th>
            <th class="text-center tblth">Occupatio Name</th>
            <th class="text-center tblth">Vision Issue</th>
            <th class="text-center tblth">Type of Vision</th>
            <th class="text-center tblth">Glasses Provided</th>
            <th class="text-center tblth">Power Of Glass</th>
            <th class="text-center tblth">Feedback Comfort</th>
            <th class="text-center tblth">Remarks</th>
            <th class="text-center tblth">Status</th>
            <th class="text-center tblth" style="min-width:100px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (dt.Rows.Count > 0)
            {
                int srno = 1;
                foreach (DataRow dr in dt.Rows)
                {
                    <tr>
                        <td class="text-center">@(srno++)</td>
                        <td class="text-center">
                            <input type="checkbox" class="camp-checkbox" name="selectedCamps" value="@dr["ParticipantId_pk"]" />
                        </td>
                        <td class="text-left">@dr["CampCode"]</td>
                        <td class="text-left">@dr["ParticipantName"]</td>
                        <td class="text-left">@dr["MobileNo"]</td>
                        <td class="text-left">@dr["Age"]</td>
                        <td class="text-left">@dr["SHGName"]</td>
                        <td class="text-left">@dr["OccupatioName"]</td>
                        <td class="text-left">@dr["TypeofVision"]</td>
                        <td class="text-left">@dr["VisionIssue"]</td>
                        <td class="text-left">@dr["GlassesProvided"]</td>
                        <td class="text-left">@dr["PowerOfGlass"]</td>
                        <td class="text-left">@dr["FeedbackonComfort"]</td>
                        <td class="text-left">@dr["Remarks"]</td>
                        <td class="text-left">@dr["IsApproved"]</td>
                        <td class="edit text-center">
                            <a asp-action="Create"
                               asp-route-PId="ParticipantId_pk"
                               class="btn edit-item-btn icon-btn btn-outline-info">
                                <i class="fa fa-edit"></i>
                            </a>

                            <button class="btn edit-item-btn icon-btn btn-outline-success" asp-action="Details" asp-route-PId="ParticipantId_pk">
                                <i class="fa fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="17" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                </tr>
            }
        }
    </tbody>
</table>

