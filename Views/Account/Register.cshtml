@{
	ViewData["Title"] = "Register";
}
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GlassLP</title>
</head>
<body class="sign-in-bg">
	<div class="app-wrapper d-block">
		<div class="">
			<!-- Body main section starts -->
			<div class="container main-container">
				<div class="row main-content-box">
					<div class="col-lg-12 form-content-box">
						<div class="form-container">
							<form class="app-form" asp-action="Register" method="post">
								<div class="row">
									<div class="col-12">
										<div class="text-lg-start">
											<h2 class="f-w-600 text-dark">Welcome To <span class="text-dark">Register!</span> </h2>
											<p class="f-s-16 mt-2">
												Sign in with your data that you enterd during your
												registration
											</p>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="email" name="email" id="email" placeholder="User Email" class="form-control" required />
											<label for="Email">Email</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="text" name="userName" id="userName" placeholder="User Name" class="form-control" required />
											<label for="userName">Username</label>
										</div>
									</div>
									<div class="col-12">
										<div class="form-floating mb-3">
											<input type="password" name="password" id="password" placeholder="Password" class="form-control" required />
											<label for="password">Password</label>
										</div>
									</div>
									<div class="col-12 mt-3">
										<button type="submit" class="btn btn-primary btn-lg float-end">Register</button>
									</div>
									@* <div class="col-12 mt-4">
										<div class="text-center text-lg-start f-w-500">
											Already have an account?
											<a asp-controller="Account" asp-action="Login" class="text-white-800 text-decoration-underline">Login</a>
										</div>
									</div> *@
								</div>
							</form>
							@if (!ViewData.ModelState.IsValid)
							{
								<div class="text-danger mt-3">
									@foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
									{
										<p class="text-danger">@err.ErrorMessage</p>
									}
								</div>
							}
						</div>
					</div>
				</div>
			</div>
			<!-- Body main section ends -->
		</div>
	</div>
</body>

