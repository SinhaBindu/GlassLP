@using System.Data
@{
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }
</style>

<table class="table table-bottom-border table-lg align-middle tbl" id="tbl">
    <thead class="text-center">
        <tr>
            <th class="text-center tblth">Sr. No.</th>
            <th class="text-center tblth">User Name</th>
            <th class="text-center tblth">Email</th>
            <th class="text-center tblth">Phone Number</th>
            <th class="text-center tblth">Name</th>
            <th class="text-center tblth">Role</th>
            <th class="text-center tblth">District</th>
            <th class="text-center tblth">Block</th>
            <th class="text-center tblth">CLF</th>
            <th class="text-center tblth">Status</th>
            <th class="text-center tblth" style="min-width:120px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (dt.Rows.Count > 0)
            {
                int srno = 1;
                foreach (DataRow dr in dt.Rows)
                {
                    <tr>
                        <td class="text-center">@(srno++)</td>
                        <td class="text-left">@dr["LoginName"]</td>
                        <td class="text-left">@dr["Email"]</td>
                        <td class="text-left">@dr["PhoneNumber"]</td>
                        <td class="text-left">@dr["Name"]</td>
                        <td class="text-left">
                            <span class="badge bg-info">@dr["RoleName"]</span>
                        </td>
                        <td class="text-left">@dr["DistrictName"]</td>
                        <td class="text-left">@dr["BlockName"]</td>
                        <td class="text-left">@dr["FederationName"]</td>
                        <td class="text-center">
                            <span class="@dr["ColorActiveUser"]">@dr["LockoutEnabled"]</span>
                        </td>
                        <td class="edit text-center">
                            <a asp-action="Create" asp-route-id="@dr["UserId"]"
                               class="btn edit-item-btn icon-btn btn-outline-info"
                               title="Edit">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@dr["UserId"]"
                               class="btn edit-item-btn icon-btn btn-outline-success"
                               title="View Details">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                </tr>
            }
        }
    </tbody>
</table>

