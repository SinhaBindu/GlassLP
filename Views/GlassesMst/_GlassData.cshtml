@using System.Data
@{
    DataTable dt = new DataTable();
    if (Model != null)
    {
        dt = Model;
    }
}
<style>
    table.dataTable thead > tr > th.sorting, table.dataTable thead > tr > th.sorting_asc, table.dataTable thead > tr > th.sorting_desc, table.dataTable thead > tr > th.sorting_asc_disabled, table.dataTable thead > tr > th.sorting_desc_disabled, table.dataTable thead > tr > td.sorting, table.dataTable thead > tr > td.sorting_asc, table.dataTable thead > tr > td.sorting_desc, table.dataTable thead > tr > td.sorting_asc_disabled, table.dataTable thead > tr > td.sorting_desc_disabled {
        padding-right: 0px !important;
    }
</style>

<table class="table table-bottom-border table-lg align-middle tbl" id="tbl">
    <thead class="text-center">
        <tr>
            <th class="text-center tblth">Srno.</th>
            <th class="text-center tblth">Type of Module</th>
            <th class="text-center tblth">Power of Glass</th>
            <th class="text-center tblth">No. of Glasses</th>
            <th class="text-center tblth">Per Glass Cost</th>
            <th class="text-center tblth">Total Glass Cost</th>
            <th class="text-center tblth">Advertising Cost</th>
            <th class="text-center tblth">Storage/Misc Cost</th>
            <th class="text-center tblth" style="min-width:100px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (dt.Rows.Count > 0)
            {
                int srno = 1;
                foreach (DataRow dr in dt.Rows)
                {
                    <tr>
                        <td class="text-center">@(srno++)</td>
                        <td class="text-left">@dr["TypeOfModuleName"]</td>
                        <td class="text-left">@dr["PowerOfGlassName"]</td>
                        <td class="text-center">@(dr["NoofGlasses"] != DBNull.Value ? dr["NoofGlasses"] : "")</td>
                        <td class="text-right">@(Convert.ToDecimal(dr["PerGlassCost"]).ToString("N2"))</td>
                        <td class="text-right">@(Convert.ToDecimal(dr["TotalGlassCost"]).ToString("N2"))</td>
                        <td class="text-right">@(Convert.ToDecimal(dr["AdvertisingCost"]).ToString("N2"))</td>
                        <td class="text-right">@(Convert.ToDecimal(dr["Storagemiscellaneouscost"]).ToString("N2"))</td>
                        <td class="text-center">
                            <a asp-action="Create"
                               asp-route-GId="@dr["pk_Glassid"]"
                               class="btn edit-item-btn icon-btn btn-outline-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details"
                               asp-route-id="@dr["pk_Glassid"]"
                               class="btn edit-item-btn icon-btn btn-outline-success">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center"><strong class="text-danger">Record Not Found !!</strong></td>
                </tr>
            }
        }
    </tbody>
</table>

