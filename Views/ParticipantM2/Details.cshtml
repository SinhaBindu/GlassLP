@model GlassLP.Models.ParticipantM2ViewModel

@{
    ViewData["Title"] = "Participant Details";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Participant Module Two - Details</h5>
                <div>
                    <a asp-action="Create" asp-route-CId="@Model.ParticipantId_pk" class="btn btn-sm btn-outline-info text-uppercase b-r-22">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary text-uppercase b-r-22 ms-2">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Type of Participant:</label>
                            <div class="form-control-plaintext">
                                @(Model.TypeofParticipantId == 1 ? "New" : Model.TypeofParticipantId == 2 ? "Repeat Customers" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Location:</label>
                            <div class="form-control-plaintext">
                                @(Model.Location == 1 ? "Camp" : Model.Location == 2 ? "Home Visit" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Camp Code:</label>
                            <div class="form-control-plaintext">@ViewBag.CampCode</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">District:</label>
                            <div class="form-control-plaintext">@ViewBag.DistrictName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Block Name:</label>
                            <div class="form-control-plaintext">@ViewBag.BlockName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">CLF Name:</label>
                            <div class="form-control-plaintext">@ViewBag.CLFName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Panchayat Name:</label>
                            <div class="form-control-plaintext">@ViewBag.PanchayatName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Participant Name:</label>
                            <div class="form-control-plaintext">@Model.ParticipantName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mobile No:</label>
                            <div class="form-control-plaintext">@Model.MobileNo</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Age:</label>
                            <div class="form-control-plaintext">@Model.Age</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Screening Date:</label>
                            <div class="form-control-plaintext">@(Model.ScreeningDate?.ToString("MM/dd/yyyy") ?? "N/A")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">SHG Name:</label>
                            <div class="form-control-plaintext">@Model.SHGName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Occupation:</label>
                            <div class="form-control-plaintext">
                                @ViewBag.OccupationName
                                @if (!string.IsNullOrEmpty(Model.Occupation_Others))
                                {
                                    <span> - @Model.Occupation_Others</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Vision Issue Identified:</label>
                            <div class="form-control-plaintext">
                                @(Model.VisionIssueIdentifiedId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Type of Vision Issue:</label>
                            <div class="form-control-plaintext">
                                @(Model.TypeofVisionIssueId == 1 ? "Myopia" : Model.TypeofVisionIssueId == 2 ? "Other" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Glasses Sold:</label>
                            <div class="form-control-plaintext">
                                @(Model.GlassesSold == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Power of Glass:</label>
                            <div class="form-control-plaintext">@ViewBag.PowerOfGlassName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Feedback on Comfort:</label>
                            <div class="form-control-plaintext">
                                @(Model.FeedbackonComfort == 1 ? "Satisfied" : Model.FeedbackonComfort == 2 ? "Not Satisfied" : Model.FeedbackonComfort == 3 ? "Adjustment Needed" : "N/A")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Referral Required:</label>
                            <div class="form-control-plaintext">
                                @(Model.FollowupRequiredId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Digital Consent:</label>
                            <div class="form-control-plaintext">
                                @(Model.DigitalConsentId == 1 ? "Yes" : "No")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Screening Cost:</label>
                            <div class="form-control-plaintext">@Model.ScreeningCost</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Glasses Cost:</label>
                            <div class="form-control-plaintext">@Model.GlassesCost</div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Remarks:</label>
                            <div class="form-control-plaintext">@Model.Remarks</div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Remarks/Action Taken:</label>
                            <div class="form-control-plaintext">@Model.RemarksActionTaken</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status:</label>
                            <div class="form-control-plaintext">
                                @(Model.IsActive == true ? "Active" : "Inactive")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

